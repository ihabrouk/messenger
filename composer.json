{
    "name": "your-github-username/laravel-messenger",
    "description": "Enterprise-grade messaging package for Laravel with multi-provider support, real-time analytics, and GDPR compliance",
    "type": "library",
    "keywords": [
        "laravel",
        "messaging",
        "sms",
        "email",
        "notifications",
        "analytics",
        "gdpr",
        "consent",
        "twilio",
        "aws-sns",
        "filament"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0",
        "filament/filament": "^3.0",
        "livewire/livewire": "^3.0",
        "spatie/laravel-permission": "^6.0",
        "twilio/sdk": "^8.0",
        "aws/aws-sdk-php": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "YourNamespace\\LaravelMessenger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YourNamespace\\LaravelMessenger\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YourNamespace\\LaravelMessenger\\Providers\\MessengerServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
